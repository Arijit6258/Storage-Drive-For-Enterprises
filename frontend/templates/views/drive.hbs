        </script>
    <title>Enterprise storage</title>
</head>

<body>
    <!-- Add header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                {{!-- <img src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="30" height="24"
                    class="d-inline-block align-top"> --}}
                Enterprise Storage
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">My storage</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Favourites</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Recent</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Trash</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Upload
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <form hidden enctype="multipart/form-data" onsubmit="uploadFile()">
                                <input name="uploaded_file_list" type="file" id="choose-file" multiple>
                                <input type="submit" value="upload!" id="submit-btn">
                            </form>

                            <li><a class="dropdown-item" id="upload-file" href="#">Upload file</a></li>
                            <li><a class="dropdown-item" href="#">Upload folder</a></li>
                            <script src="js/file_upload.js"></script>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" style="width: 400px" type="search"
                        placeholder="Search files in your storage" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Display list of files -->
    <script src="js/app.js"></script>
